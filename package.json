{
  "name": "securesync-pro",
  "version": "1.0.0",
  "description": "SecureSync Pro - The world's first adaptive collaboration platform with breakthrough security features",
  "author": "Nexus Technologies",
  "license": "Commercial",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:shared && npm run test:backend && npm run test:frontend",
    "test:shared": "cd packages/shared && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "docs:api": "swagger-jsdoc -d swaggerDef.js -o docs/api.json packages/backend/**/*.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/webrtc": "^0.0.46",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
