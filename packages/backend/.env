# SecureSync Pro Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://admin:securesync2024@localhost:27017/securesync-pro?authSource=admin
MONGODB_URI_PROD=mongodb://admin:securesync2024@mongodb:27017/securesync-pro?authSource=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=securesync2024
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@securesync.pro

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# WebRTC Configuration
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=securesync
TURN_CREDENTIAL=securesync2024

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Blockchain Configuration (for audit trails)
ETHEREUM_NETWORK=goerli
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
ETHEREUM_CONTRACT_ADDRESS=your-contract-address

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
